<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    {% set base = siteURL.url %}
  
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Signika:wght@300..700&display=swap" rel="stylesheet">
  
    <!-- Primary SEO -->
    <title>{{ title }} | EFTclub</title>
    <meta name="description" content="{{ description }}" />
    <meta name="robots" content="{{ robots or 'index, follow' }}" />
    <link
      rel="canonical"
      href="{{ (canonical or page.url) | absoluteUrl(base) }}"
    />
  
    <!-- Open Graph / Facebook -->
    <meta
      property="og:type"
      content="article"
    />
    <meta
      property="og:url"
      content="{{ (canonical or page.url) | absoluteUrl(base) }}"
    />
    <meta
      property="og:title"
      content="{{ title }}"
    />
    <meta
      property="og:description"
      content="{{ description }}"
    />
    {% if image %}
      <meta
        property="og:image"
        content="{{ image | absoluteUrl(base) }}"
      />
    {% endif %}
    {% if date %}
      <meta
        property="article:published_time"
        content="{{ date | dateISO }}"
      />
    {% endif %}
    {% if lastmod %}
      <meta
        property="article:modified_time"
        content="{{ lastmod | dateISO }}"
      />
    {% endif %}
    {% if author %}
      <meta
        property="article:author"
        content="{{ author }}"
      />
    {% endif %}
  
    <!-- Twitter Card -->
    <meta
      name="twitter:card"
      content="summary_large_image"
    />
    <meta
      name="twitter:site"
      content="@EFTclub"
    />
    <meta
      name="twitter:title"
      content="{{ title }}"
    />
    <meta
      name="twitter:description"
      content="{{ description }}"
    />
    {% if image %}
      <meta
        name="twitter:image"
        content="{{ image | absoluteUrl(base) }}"
      />
    {% endif %}
  
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ (canonical or page.url) | absoluteUrl(base) }}"
      },
      "headline": "{{ title }}",
      "description": "{{ description }}",
      {% if image %}"image": ["{{ image | absoluteUrl(base) }}"],{% endif %}
      "author": {
        "@type": "Person",
        "name": "{{ author }}"
      },
      "datePublished": "{{ date | dateISO }}",
      {% if lastmod %}"dateModified": "{{ lastmod | dateISO }}",{% endif %}
      "publisher": {
        "@type": "Organization",
        "name": "EFTclub",
        "logo": {
          "@type": "ImageObject",
          "url": "https://eftclub.com/images/icons/favicon-32.png"
        }
      }
    }
    </script>
  
    <!-- Styles -->
    <link
      rel="preload"
      href="/css/style-blogs.css"
      as="style"
    />
    <link
      rel="stylesheet"
      href="/css/style-blogs.css"
    />
  
    <!-- Scripts -->
    <script
      type="module"
      defer
      src="/js/main.js"
    ></script>
  
    <!-- Favicons -->
    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/images/icons/apple-touch-icon.png" sizes="180x180" />
    <link rel="icon" href="/images/icons/favicon-32.png" sizes="32x32" />
    <link rel="icon" href="/images/icons/favicon-16.png" sizes="16x16" />
  </head>
  

  <body>
    {% include "header.njk" %}

    <div class="container">
      <main class="post">
        <article class="post-content">
          <h1>{{ title }}</h1>

          <p class="pub-date">
            Publicado em:
            <time datetime="{{ date | dateISO }}">{{ date | readableDate }}</time>

            {% if lastmod %}
              e atualizado em
              <span class="last-updated">
                <time datetime="{{ lastmod | dateISO }}">
                  {{ lastmod | readableDate }}
                </time>
              </span>
            {% endif %}
          </p>

          <div class="autor-data-container">
            {% set authorInfo = authors[author] or {
              "image": "/images/authors/default.webp",
              "alt": "Default Author"
            } %}

            <img
              src="{{ authorInfo.image }}"
              alt="{{ authorInfo.alt }}"
              class="author-picture"
            />

            <div class="autor-data">
              <address>
                Autora: <br />
                <strong>{{ author }}</strong>
              </address>
            </div>
          </div>

          {{ content | safe }}
        </article>
      </main>

      <aside class="side-bar">
        <div class="ajuda">
          <h2>Precisa da minha ajuda?</h2>
          <!-- <a href="/index" class="btn btn_border">Saiba Mais</a> -->
           <p><a class="btn" href="/index">Saiba Mais →</a></p>
        </div>

        <div class="artigos">
          <h2>Você pode se interessar também:</h2>

        
          {% import "snippet.njk" as Snippet %}
        
          {% set suggestions = collections.posts
            | suggestions(tags, page.url, 2) %}         
        
          {% if suggestions | length %}
            <ul class="articles_list flow">
              {%- for post in suggestions -%}
                {{ Snippet.snippet(
                     post.url,
                     post.data.image,
                     post.data.image_alt,
                     post.data.title,
                     post.date,
                     post.data.author,
                     post.data.lastmod
                ) }}
              {%- endfor -%}
              <li>
                <p><a href="/blog/">Ver todos artigos →</a></p>
              </li>
            </ul>
          {% else %}
            <p>Nenhum outro artigo encontrado.</p>
          {% endif %}
        </div>
      </aside>
    </div>

    {% include "whatsapp-btn.njk" %}
    {% include "footer.njk" %}
  </body>
</html>
